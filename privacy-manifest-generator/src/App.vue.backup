// å¯¼å…¥XMLè§£æå‡½æ•°
function parsePrivacyManifest(xmlText: string) {
  try {
    const parser = new DOMParser()
    const xmlDoc = parser.parseFromString(xmlText, 'text/xml')
    
    // æ£€æŸ¥è§£æé”™è¯¯
    const parseError = xmlDoc.querySelector('parsererror')
    if (parseError) {
      throw new Error('XMLæ ¼å¼æ— æ•ˆ')
    }
    
    // é‡ç½®å½“å‰çŠ¶æ€
    resetAllStates()
    
    // è§£æéšç§è·Ÿè¸ªè®¾ç½®
    const privacyTracking = xmlDoc.querySelector('key[text="NSPrivacyTracking"]')
    if (privacyTracking && privacyTracking.nextElementSibling?.tagName === 'true') {
      includePrivacyTracking.value = true
    }
    
    // è§£æè·Ÿè¸ªåŸŸå
    const allKeys = xmlDoc.querySelectorAll('key')
    for (let i = 0; i < allKeys.length; i++) {
      if (allKeys[i].textContent === 'NSPrivacyTrackingDomains') {
        const domainsArray = allKeys[i].nextElementSibling
        if (domainsArray?.tagName === 'array') {
          const domainStrings = domainsArray.querySelectorAll('string')
          domainStrings.forEach(domain => {
            if (domain.textContent) {
              trackingDomains.value.push(domain.textContent)
            }
          })
        }
        break
      }
    }
    
    // è§£æAPIä½¿ç”¨ç±»å‹
    parseApiTypes(xmlDoc)
    
    // è§£ææ”¶é›†çš„æ•°æ®ç±»å‹
    parseCollectedDataTypes(xmlDoc)
    
    importStatus.value = { type: 'success', message: 'å¯¼å…¥æˆåŠŸï¼å·²è‡ªåŠ¨å¡«å……æ‰€æœ‰é…ç½®é¡¹ã€‚' }
    showImportDialog.value = false
    
  } catch (error: any) {
    importStatus.value = { type: 'error', message: `å¯¼å…¥å¤±è´¥ï¼š${error.message}` }
  }
}

// è§£æAPIä½¿ç”¨ç±»å‹
function parseApiTypes(xmlDoc: Document) {
  const apiTypesKeys = xmlDoc.querySelectorAll('key')
  for (let i = 0; i < apiTypesKeys.length; i++) {
    if (apiTypesKeys[i].textContent === 'NSPrivacyAccessedAPITypes') {
      const apiTypesArray = apiTypesKeys[i].nextElementSibling
      if (apiTypesArray?.tagName === 'array') {
        const apiDicts = apiTypesArray.querySelectorAll('dict')
        apiDicts.forEach(dict => {
          let apiType = ''
          const reasons: ApiReason[] = []
          
          const keys = dict.querySelectorAll('key')
          keys.forEach(key => {
            if (key.textContent === 'NSPrivacyAccessedAPIType') {
              const typeString = key.nextElementSibling
              if (typeString?.tagName === 'string') {
                apiType = typeString.textContent || ''
              }
            } else if (key.textContent === 'NSPrivacyAccessedAPITypeReasons') {
              const reasonsArray = key.nextElementSibling
              if (reasonsArray?.tagName === 'array') {
                const reasonStrings = reasonsArray.querySelectorAll('string')
                reasonStrings.forEach(reasonString => {
                  const reasonCode = reasonString.textContent
                  if (reasonCode) {
                    // æ ¹æ®ä»£ç æŸ¥æ‰¾å¯¹åº”çš„åŸå› å¯¹è±¡
                    const foundReason = findReasonByCode(apiType, reasonCode)
                    if (foundReason) {
                      reasons.push({ ...foundReason })
                    }
                  }
                })
              }
            }
          })
          
          if (apiType && reasons.length > 0) {
            const categoryName = availableApiCategories.find(cat => cat.id === apiType)?.name || ''
            const newEntry: ApiUsageEntry = {
              id: Date.now().toString() + Math.random().toString(36).substr(2, 9),
              categoryId: apiType,
              categoryName: categoryName,
              selectedReasons: reasons
            }
            apiUsageEntries.value.push(newEntry)
          }
        })
      }
      break
    }
  }
}

// è§£ææ”¶é›†çš„æ•°æ®ç±»å‹
function parseCollectedDataTypes(xmlDoc: Document) {
  const dataTypesKeys = xmlDoc.querySelectorAll('key')
  for (let i = 0; i < dataTypesKeys.length; i++) {
    if (dataTypesKeys[i].textContent === 'NSPrivacyCollectedDataTypes') {
      const dataTypesArray = dataTypesKeys[i].nextElementSibling
      if (dataTypesArray?.tagName === 'array') {
        const dataDicts = dataTypesArray.querySelectorAll('dict')
        dataDicts.forEach(dict => {
          let dataType = ''
          let linkedToUser = false
          let tracking = false
          const purposes: string[] = []
          
          const keys = dict.querySelectorAll('key')
          keys.forEach(key => {
            const keyText = key.textContent
            const nextElement = key.nextElementSibling
            
            if (keyText === 'NSPrivacyCollectedDataType' && nextElement?.tagName === 'string') {
              dataType = nextElement.textContent || ''
            } else if (keyText === 'NSPrivacyCollectedDataTypeLinkedToUser') {
              linkedToUser = nextElement?.tagName === 'true'
            } else if (keyText === 'NSPrivacyCollectedDataTypeTracking') {
              tracking = nextElement?.tagName === 'true'
            } else if (keyText === 'NSPrivacyCollectedDataTypePurposes' && nextElement?.tagName === 'array') {
              const purposeStrings = nextElement.querySelectorAll('string')
              purposeStrings.forEach(purposeString => {
                if (purposeString.textContent) {
                  purposes.push(purposeString.textContent)
                }
              })
            }
          })
          
          if (dataType && purposes.length > 0) {
            const dataTypeName = availableDataTypes.find(dt => dt.id === dataType)?.name || dataType
            const newDataType: CollectedDataType = {
              id: Date.now().toString() + Math.random().toString(36).substr(2, 9),
              name: dataTypeName,
              category: dataType,
              selected: true,
              linkedToIdentity: linkedToUser,
              usedForTracking: tracking,
              purposes: purposes
            }
            collectedDataTypes.value.push(newDataType)
          }
        })
      }
      break
    }
  }
}

// æ ¹æ®ä»£ç æŸ¥æ‰¾åŸå› å¯¹è±¡
function findReasonByCode(apiType: string, reasonCode: string): ApiReason | null {
  const reasons = apiReasonsByCategory[apiType as keyof typeof apiReasonsByCategory]
  if (reasons) {
    return reasons.find(reason => reason.code === reasonCode) || null
  }
  return null
}

// é‡ç½®æ‰€æœ‰çŠ¶æ€
function resetAllStates() {
  includePrivacyTracking.value = false
  trackingDomains.value = []
  apiUsageEntries.value = []
